<script src="/layui/layui.js" charset="utf-8"></script>
<!-- 注意：如果你直接复制所有代码到本地，上述js路径需要改成你本地的 --> 
<script src="/js/Singleexport2excel.js"></script>
<script>

layui.use('table', function () {
	var table = layui.table;

	table.render({
		elem: '#test',
		method: 'post',
		url: '/main/list',
		toolbar: '#toolbarDemo',
		title: '用户数据表',
		cols: [[{
					type: 'checkbox',
					fixed: 'left'
				}, {
					field: 'p_id',
					title: 'ID',
					fixed: 'left',
					width: 150,
					templet: '#idTpl',
					unresize: true,
					sort: true
				}, {
					field: 'mainpic',
					title: '图片',
					width: 250,
					templet: '#picTpl'
				}, {
					field: 'title',
					title: '名称',
					event: 'showDetail'
				}, {
					field: 'price',
					title: '价格',
					width: 100,
					sort: true
				}, {
					field: 'shop',
					width: 450,
					title: '商店'
				}, {
					field: 'updated_at',
					width: 250,
					title: '编辑时间',
					sort: true
				}
			]],
		page: true
		,id: 'testReload'
	});
	var $ = layui.$;
	 $('.demoTable .layui-btn').on('click', function(){
    var demoReload = $('#demoReload');
      
      //执行重载
      table.reload('testReload', {
        page: {
          curr: 1 //重新从第 1 页开始
        }
        ,where: {
          description:demoReload.val()
        }
      });
  });
	
	//详情
	table.on('tool(test)', function (obj) {
		var tooldata = obj.data;
		if (obj.event === 'showDetail') {
			layer.open({
				type: 2,
				content: '/show/'+tooldata.p_id
				,area: ['800px', '600px']
			});
		}
	});
	//头工具栏事件
	table.on('toolbar(test)', function (obj) {
		var checkStatus = table.checkStatus(obj.config.id);
		switch (obj.event) {
		case 'DelData':
			var data = checkStatus.data;
			layer.confirm('真的删除所选' + data.length + '行么', function (index) {
				console.log(data)
				
				layer.close(index);
			});
			break;
		case 'model_exportToExcel':
            var data = 	checkStatus.data;
			var mark=new Date().getTime();
            var index = layer.load(3);
		  			$.ajax({
		  				url: "/main/model_exportToExcel",
		  				type: 'post',
		  				data: { mark:mark,
						        data:data
						},
		  				dataType: "json",
		  				success: function (dt) {
                            						
		  					layer.close(index);
							if(dt.success){
							  layer.msg(dt.msg+"    开始下载。。。");
							  window.open('/excel/'+mark+'.xlsx');
							}else{
							  layer.msg(dt.msg);
							}
		  				}
		  			});			
		case 'getCheckLength':
			var data = checkStatus.data;
			layer.msg('选中了：' + data.length + ' 个');
			break;
		case 'exportToExcel':
			var colarr = [];
			var fieldarr = [];
			for (let v of obj.config.cols[0]) {
				if (v.type != "checkbox" && !v.hide) {
					colarr.push(v.title);
					fieldarr.push(v.field);
				}
			}
			//LAY_CHECKED
			var dataExp = [];
			for (let vd of checkStatus.data) {
				var dataExpS = {};
				for (let vdsingle of fieldarr) {
					dataExpS['"' + vdsingle + '"'] = vd[vdsingle];
				}
				dataExp.push(dataExpS);
			}
			export2Excel(colarr, dataExp, '导出表');
			break;
		};
	});

});
</script>

</body>
</html>